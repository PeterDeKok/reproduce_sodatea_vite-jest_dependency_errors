{
    "compilerOptions": {
        "baseUrl": "./",
        "target": "ES2020",
        "useDefineForClassFields": true,
        "module": "ES2020",
        "lib": ["ES2020", "DOM", "DOM.Iterable", "ScriptHost"],
        "moduleResolution": "Node",
        "strict": true,
        "sourceMap": true,
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "noEmit": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noImplicitReturns": true,
        "isolatedModules": true,
        "jsx": "preserve",
        "skipLibCheck": true
    },
    "include": ["src"]
}
